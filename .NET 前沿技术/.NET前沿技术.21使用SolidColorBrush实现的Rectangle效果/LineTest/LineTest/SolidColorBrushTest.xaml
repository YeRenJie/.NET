<UserControl x:Class="LineTest.SolidColorBrushTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Canvas>
        <Rectangle Canvas.Top="50" Canvas.Left="20" Width="200" Height="100">
            <Rectangle.Fill >
                <SolidColorBrush Color="DarkGreen"   Opacity="0.3" ></SolidColorBrush>
            </Rectangle.Fill>       
        </Rectangle>
    </Canvas>
</UserControl>
