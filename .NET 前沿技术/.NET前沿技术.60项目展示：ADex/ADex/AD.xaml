<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ADex.AD" 
	d:DesignWidth="300" d:DesignHeight="300"  Loaded="UserControl_Loaded" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid x:Name="LayoutRoot" 
           Margin="0"   Width="300" Height="260">
        <Image x:Name="Image1" Width="300" Height="220" VerticalAlignment="Top" Stretch="Fill"/>
        <Image x:Name="Image2" Width="300" Height="220" VerticalAlignment="Top" Stretch="Fill"/>
        <Grid x:Name="ContainerGrid" Height="40"  Width="300"  VerticalAlignment="Bottom">
            <TextBlock x:Name="tb_Description"  HorizontalAlignment="Center" Text="" FontSize="14" Foreground="Black"></TextBlock>
            <Rectangle Fill="Black" Opacity="0.3"/>
            <StackPanel x:Name="ButtonContainer" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">

            </StackPanel>
         
        </Grid>
    </Grid>
  
</UserControl>